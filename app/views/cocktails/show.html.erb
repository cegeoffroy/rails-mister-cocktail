<h1><%= @cocktail.name %></h1>


<% @cocktail.doses.each do |dose| %>
  <li>
    <%= dose.description %> <%= dose.ingredient.name %>
    <%= link_to 'Delete', dose_path(dose), method: :delete, data: { confirm: "Are you sure?" }, class: "card-remove-link" %>
  </li>
<% end %>


<p><%= link_to 'Back to list', cocktails_path %>
    <%= link_to 'Add dose', new_cocktail_dose_path(@cocktail) %>

    </p>


